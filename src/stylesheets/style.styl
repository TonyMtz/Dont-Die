background-color = #0f0f0f

html, body
  background-color background-color
  height 100%
  font-family Helvetica, Arial, sans-serif
  margin 0
  padding 0
  width 100%

#content
  display block

#status
  bottom 0
  color #ccc
  display block
  font-size 11px
  left 0
  padding 5px 10px
  position fixed
  width 100%

  span
    background rgba(0,0,0,0.5)
    border-radius 3px
    line-height 20px
    margin-right 10px
    padding 5px

    strong
      color #fff
